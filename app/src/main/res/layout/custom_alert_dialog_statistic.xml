<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/custom_alert_dialog_statistic_1"
    android:gravity="center">

    <ImageView
        android:id="@+id/close_alert_dialog_statistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_button_close"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:elevation="5dp"
        android:layout_alignParentRight="true"
        tools:ignore="MissingPrefix,VectorDrawableCompat" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#689F38"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:text="Statistika"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icon_alert_dialog_statistic"
                    tools:ignore="MissingPrefix,VectorDrawableCompat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:text="Здесь ты можешь посмотреть свою статистику за все время."
                    android:gravity="center_horizontal" />

                <View
                    android:layout_centerHorizontal="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:background="#357100" />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:paddingLeft="27dp"
                    android:paddingRight="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/good_smile_statistic"
                        tools:ignore="MissingPrefix,VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imageView"
                        android:text="Верных ответов:"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:textDirection="locale"
                        android:gravity="end"
                        android:id="@+id/count_good_answers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textView"
                        android:text="999+"
                        android:textSize="18dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="27dp"
                    android:paddingRight="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/wrong_smile_statistic"
                        tools:ignore="MissingPrefix,VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imageView2"
                        android:text="Неверных ответов:"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:textDirection="locale"
                        android:gravity="end"
                        android:id="@+id/count_bad_answers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textView2"
                        android:text="999+"
                        android:textSize="18dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="27dp"
                    android:paddingRight="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_count_all_answers"
                        tools:ignore="MissingPrefix,VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imageView3"
                        android:text="Всего попыток:"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:gravity="end"
                        android:id="@+id/text_count_all_answers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textView3"
                        android:text="999+"
                        android:textSize="18dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="27dp"
                    android:paddingRight="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/no_game_more_statistic"
                        tools:ignore="MissingPrefix,VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imageView4"
                        android:text="Попыток на сегодня:"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:gravity="end"
                        android:id="@+id/count_last_questions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textView4"
                        android:text="40"
                        android:textSize="18dp"/>
                </RelativeLayout>

                <View
                    android:layout_centerHorizontal="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:background="#357100" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:text="Спасибо!"
                    android:gravity="center_horizontal" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>